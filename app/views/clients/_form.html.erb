<% if !@client.errors.empty? %>
	<ol>
		<% @client.errors.full_messages.each do |msg| %>
		<li><%=msg%></li>
		<%end%>
	</ol>
<%end%>

<%= form_for @client do |f| %>
	<p>Nombre: <%= f.text_field :name%></p>
	
	<p>Email: <%= f.text_field :email%></p>
	<% if !@client.persisted? %>
	<p>Password: <%= f.password_field :password%></p>
	<%= f.label 'avatar' %></p>
	<%= f.file_field :avatar %></p>
	<%= f.submit %>
	<%end%>

<%end%>